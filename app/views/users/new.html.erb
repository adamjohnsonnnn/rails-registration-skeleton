<div class="registration-container" >
<h3>registration</h3>

<% if @errors %>
<ul>
  <% @errors.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @user do |form| %>

<p>
  <%= form.text_field :first_name, placeholder: "first name", class: "registration-form-field" %>
</p>
<p>
  <%= form.text_field :last_name, placeholder: "last name", class: "registration-form-field" %>
</p>
<p>
  <%= form.text_field :email, placeholder: "email", class: "registration-form-field" %>
</p>
<p>
  <%= form.password_field :password, placeholder: "password", class: "registration-form-field" %>
</p>
<p>
  <%= form.submit "register", class: "form-button" %>
</p>

<% end %>
</div>